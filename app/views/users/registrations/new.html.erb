<div class="container">
  <div class="row">
    <div class="col-md-7">
      <h2 class="product_head">Connect with friends and the world around you on Facebook.</h2>

      <div class="row product">
        <div class="col-md-2">
          <div class="img">
            <%= image_tag("newsfeed.png")%>
          </div>
        </div>
        <div class="col-md-10">
          <strong>See photos and updates</strong> from friends in News Feed.
        </div>
      </div>
      
      <div class="row product">
        <div class="col-md-2">
          <div class="img">
            <%= image_tag("timeline.png")%>
          </div>
        </div>
        <div class="col-md-10">
          <strong>Share what's new</strong> in your life on our Timeline.
        </div>
      </div>

      <div class="row product">
        <div class="col-md-2">
          <div class="img">
            <%= image_tag("graph_search.png")%>
          </div>
        </div>
        <div class="col-md-10">
          <strong>Find more</strong> of what you're looking for with Graph Search.
        </div>
      </div>         
    </div>

    <div class="col-md-5 form-group">
      <h2 class="signup_head">Sign up</h2>
      <div class="signup_desc">It's free and always will be.</div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div>
          <%= f.text_field :first_name, placeholder: "First name", class: "form-control name" %>

          <%= f.text_field :last_name, placeholder: "Last name", class: "form-control name right"  %>
        </div>               

        <div>
          <%= f.email_field :email, placeholder: "Email", class: "form-control"  %>
        </div>

        <div>
          <%= f.password_field :password, autocomplete: "off", placeholder: "New password", class: "form-control" %>
        </div>

        <div>
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Re-enter password", class: "form-control" %>
        </div>

        <div>
          <%= f.radio_button :gender, "female" %>
          <%= f.label :female %>
          <%= f.radio_button :gender, "male" %>
          <%= f.label :male %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "btn-signup" %>
        </div>
      <% end %>
    </div>
  </div>
</div>