<header class= "navbar navbar-fixed-top">
	<div class="container">
		<nav class="navbar">
		  <div class="container-fluid">
		    <div class="navbar-header">
					<%= link_to newsfeed_path do %>
				  	<%= image_tag("facebook-icon.png", class: "fb-icon")%>
				  <% end %>
		    </div>

		    <div>
					<%= form_tag "#", method: "get", :class => 'navbar-form navbar-left' do %>
						<div class="input-group">
						  <%= text_field_tag 'search',nil, class: "form-control", placeholder: "Search Odin-Facebook" %>
							<span class="input-group-btn">
						  	<%= button_tag("Search", class: "btn btn-default") %>
						  </span>
					  </div>
					<% end %>	    	
					<ul class="nav navbar-nav navbar-right">
						<li><%= link_to "#{current_user.first_name}", '#' %></li>
						<li><%= link_to "Home", root_path %></li>
						<li><%= link_to "Find Friends", users_path %></li>
						<li><%= link_to "Notifications", "#" %></li>
						<li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
					</ul>
		    </div>
		  </div>
		</nav>
	</div>
</header>		