<h3>All Users</h3>
<%= render 'users/shared/user_navbar' %>

<div class="row">
	<ul>
		<% @users.each do |user| %>
			<% if user != @user %>
				<li>
					<%= link_to "#{full_name(user)}", timeline_path(:id => user) %>
					<% if @pending_friends.include?(user) %>
						Friend Request Sent
					<% elsif !@user.friends.include?(user) %>
						<%= link_to "Add Friend", friendships_path(:friend_id => user), :method => :post %>
					<% else %>
						Friend Added
					<% end %>
				</li>
			<% end %>
		<% end %>
	</ul>
</div>